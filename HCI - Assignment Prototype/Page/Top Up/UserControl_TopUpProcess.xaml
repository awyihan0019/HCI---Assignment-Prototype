<UserControl x:Class="HCI___Assignment_Prototype.Page.Top_Up.UserControl_TopUpProcess"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCI___Assignment_Prototype.Page.Top_Up"
             mc:Ignorable="d" >
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" FontSize="30" Margin="2 2 2 20" FontWeight="Bold">Processing Top-Up in banking web</TextBlock>
        <Button x:Name="NextStep" Click="NextStep_Click" Width="100" HorizontalAlignment="Center"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}" Margin="20 5 20 5"
                    ToolTip="Resource name: MaterialDesignRaisedLightDarkButton">
            NEXT
        </Button>
    </StackPanel>
</UserControl>
