<UserControl x:Class="HCI___Assignment_Prototype.Page.CheckBooking.UserControl_ReservationEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCI___Assignment_Prototype.Page.CheckBooking"
             xmlns:customcontrol="clr-namespace:HCI___Assignment_Prototype.CustomControl"
             mc:Ignorable="d">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
        <TextBlock FontSize="30" Margin="2 2 2 2" HorizontalAlignment="Center" FontWeight="Bold">Update Reservation</TextBlock>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500" Orientation="Horizontal"
                    Margin="5">
            <Image x:Name="___HCI___Assignment_Prototype_component_dog_jpg" HorizontalAlignment="Center" Height="150"
                   Width="150" Margin="15 5 5 5" Source="/HCI - Assignment Prototype;component/dog.jpg" Stretch="Fill" />
            <StackPanel>
                <TextBlock FontSize="25" FontWeight="Bold" Margin="5">Movie Name</TextBlock>
                <TextBlock FontSize="25" Margin="5 0">(Rating)</TextBlock>
            </StackPanel>
        </StackPanel>
        <customcontrol:DropDownWithPencil Label="Location" Text="Location" Margin="0 5"></customcontrol:DropDownWithPencil>
        <customcontrol:DropDownWithPencil Label="Time" Text="Time" Margin="0 5"></customcontrol:DropDownWithPencil>
        <customcontrol:DropDownWithPencil Label="Date" Text="Date" Margin="0 5"></customcontrol:DropDownWithPencil>
        <customcontrol:DropDownWithPencil Label="Seat" Text="Seat" Margin="0 5"></customcontrol:DropDownWithPencil>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Button x:Name="Cancel" Click="Cancel_OnClick" Width="100"
                    Style="{StaticResource MaterialDesignFlatButton}" Margin="20 5 20 5"
                    ToolTip="Resource name: MaterialDesignRaisedLightDarkButton" HorizontalAlignment="Right">
            CANCEL
        </Button>
        <Button x:Name="Login" Click="SaveReservationEdit_Click" Width="100"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}" Margin="20 5 20 5"
                    ToolTip="Resource name: MaterialDesignRaisedLightDarkButton" HorizontalAlignment="Right">
            SAVE
        </Button>
    </StackPanel>
    </StackPanel>
</UserControl>
