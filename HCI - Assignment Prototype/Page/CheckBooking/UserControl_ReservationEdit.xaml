<UserControl x:Class="HCI___Assignment_Prototype.Page.CheckBooking.UserControl_ReservationEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCI___Assignment_Prototype.Page.CheckBooking"
             xmlns:customcontrol="clr-namespace:HCI___Assignment_Prototype.CustomControl"
             mc:Ignorable="d">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500" Orientation="Horizontal"
                    Margin="5">
            <Image x:Name="___HCI___Assignment_Prototype_component_dog_jpg" HorizontalAlignment="Left" Height="150"
                   Width="150" Margin="15 5 5 5" Source="/HCI - Assignment Prototype;component/dog.jpg" Stretch="Fill" />
            <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5"
                    Content="{materialDesign:PackIcon Kind=LeadPencil}" ToolTip="Edit Picture" />
        </StackPanel>
        <customcontrol:TextboxWithPencil Label="Movie Name" Text="xxxxx" />
        <customcontrol:TextboxWithPencil Label="Location" Text="LLLLLL" />
        <customcontrol:TextboxWithPencil Label="Time" Text="08:00" />
        <customcontrol:TextboxWithPencil Label="Date" Text="2017/2/01" />
        <customcontrol:TextboxWithPencil Label="Ticket" Text="4" />
        <customcontrol:TextboxWithPencil Label="Seat" Text="A3, A4" />
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Button x:Name="Cancel" Click="Cancel_OnClick" Width="100"
                    Style="{StaticResource MaterialDesignFlatButton}" Margin="20 5 20 5"
                    ToolTip="Resource name: MaterialDesignRaisedLightDarkButton" HorizontalAlignment="Right">
            CANCEL
        </Button>
        <Button x:Name="Login" Click="SaveReservationEdit_Click" Width="100"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}" Margin="20 5 20 5"
                    ToolTip="Resource name: MaterialDesignRaisedLightDarkButton" HorizontalAlignment="Right">
            SAVE
        </Button>
    </StackPanel>
    </StackPanel>
</UserControl>
