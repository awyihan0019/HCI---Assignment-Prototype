<UserControl x:Class="HCI___Assignment_Prototype.Page.UserControl_ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCI___Assignment_Prototype.Page"
             mc:Ignorable="d" 
             d:DesignHeight="160" d:DesignWidth="400">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Height="140"
                Margin="30">
        <TextBlock FontSize="30" Margin="2 20 2 20" HorizontalAlignment="Center" FontWeight="Bold">Creating Profile...</TextBlock>
        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"                     
                     Value="0"
                     IsIndeterminate="True"
                     Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="12 12 12 12"/>
    </StackPanel>
</UserControl>
