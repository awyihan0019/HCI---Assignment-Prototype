<UserControl x:Class="HCI___Assignment_Prototype.Page.View_Booking.UserControl_SelectSeats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCI___Assignment_Prototype.Page.View_Booking"
             xmlns:seatplacecontrol="clr-namespace:HCI___Assignment_Prototype.CustomControl.SeatPlaceControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" Orientation="Vertical" >
            <StackPanel>
                <seatplacecontrol:SeatPlace></seatplacecontrol:SeatPlace>
            </StackPanel>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock
	Margin="0,4,0,6"
	Style="{StaticResource MaterialDesignHeadlineTextBlock}">     
	Blue  = Available
                </TextBlock>
                <TextBlock
	Margin="0,4,0,6"
	Style="{StaticResource MaterialDesignHeadlineTextBlock}">
                 Red = Occupied
                </TextBlock>
                <TextBlock
	Margin="0,4,0,6"
	Style="{StaticResource MaterialDesignHeadlineTextBlock}">
            Black = Selected
                </TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button
	Style="{StaticResource MaterialDesignFlatButton}"
	HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,15,20,0" Width="100">
                    CANCEL
                </Button>
                <Button
	Width="100"
	Style="{StaticResource MaterialDesignRaisedButton}"
	HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20,15,0,0">
                    NEXT
                </Button>
                
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
