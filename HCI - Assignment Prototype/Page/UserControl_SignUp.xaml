<UserControl x:Class="HCI___Assignment_Prototype.Page.UserControl_SignUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCI___Assignment_Prototype.Page"
             mc:Ignorable="d" >
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Height="300"
                Margin="30">
        <TextBlock FontSize="30" Margin="2 2 2 20" HorizontalAlignment="Center" FontWeight="Bold">Sign up</TextBlock>
        <TextBlock FontSize="20" HorizontalAlignment="Left">Enter your email :</TextBlock>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox Grid.Row="4" Grid.Column="1" materialDesign:HintAssist.Hint="" Width="180"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBlock FontSize="30">@</TextBlock>
            <TextBox Grid.Row="4" Grid.Column="1" materialDesign:HintAssist.Hint="" Width="100"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
        </StackPanel>
    </StackPanel>
</UserControl>
