<UserControl x:Class="HCI___Assignment_Prototype.CustomControl.SeatPlaceControl.SeatPlace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCI___Assignment_Prototype.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid>
            <Rectangle Height="20" Fill="OrangeRed" />
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold">S C R E E N</TextBlock>
        </Grid>
        <StackPanel Orientation="Horizontal">
            <Grid x:Name="LeftArea" Margin="15" Visibility="Collapsed"></Grid>
            <Grid x:Name="LabelArea" Margin="15"></Grid>
            <Grid x:Name="MiddleArea" Margin="15"></Grid>
            <Grid x:Name="RightArea" Margin="15" Visibility="Collapsed"></Grid>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label FontWeight="Bold">Selected seats :</Label>
            <Label x:Name="HighlightedSeatsLabel"></Label>
        </StackPanel>
    </StackPanel>
</UserControl>

